@model Role

<div class="container-fluid">
    <div class="row">
        @await Html.PartialAsync("AdminLeftMenu")
        <div class="col-9">
            <div class="col-12 text-left">
                <h3>Добавить новую роль</h3>
            </div>
            <hr class="m-3" />
            <form method="post">
                <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Name">Новая роль</label>
                    <div class="input-group">
                        <input type="text" class="form-control box-shadow" asp-for="Name" />
                        <span asp-validation-for="Name" />
                    </div>
                </div>
                <hr class="m-3" />
                <div class="row">
                    <div class="col-9 text-left"></div>
                    <div class="col-9 text-left">
                        <input type="submit" class="btn btn-lg btn-outline-info" asp-area="Admin" asp-controller="Roles" asp-action="Add" value="Добавить">
                    </div>
                </div>
            </form>
            <div class="text-left">
                <a asp-area="Admin" asp-controller="Roles" asp-action="Index">Назад к списку ролей</a>
            </div>
        </div>
    </div>
</div>
