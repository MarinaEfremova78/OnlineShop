@model UserPasswordInfo

<div class="container-fluid">
    <div class="row">
        @await Html.PartialAsync("AdminLeftMenu")
        <div class="col-9">
            <div class="col-12 text-center">
                <h3>Смена пароля</h3>
            </div>
            <form method="post">
                <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
                <div>
                    <input type="hidden" asp-for="UserId" value=@Model.UserId />
                </div>
                <div>
                    <label asp-for="Password">Новый пароль</label><br />
                    <div class="input-group">
                        <input type="password" asp-for="Password" class="form-control box-shadow" />
                        <span asp-validation-for="Password" />
                    </div>
                </div>
                <div>
                    <label asp-for="ConfirmPassword">Подтвердите новый пароль</label><br />
                    <div class="input-group">
                        <input type="password" asp-for="ConfirmPassword" class="form-control box-shadow" />
                        <span asp-validation-for="ConfirmPassword" />
                    </div>
                </div>
                <div class="my-4"></div>
                <div class="form-group text-center">
                    <input type="submit" value="Сохранить" class="btn btn-outline-dark" />
                </div>
                <div class="text-left">
                    <a class="btn btn-outline-dark" asp-area="Admin" asp-controller="Users" asp-action="Details" asp-route-userId="@Model.UserId"><i class="bi bi-arrow-return-left"></i></a>
                </div>
            </form>
        </div>
    </div>
</div>
