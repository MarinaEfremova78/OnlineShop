@model Product

<form method="post">
    <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-4">
                <img src=@Model.ImagePath class="w-100 h-100 mx-auto d-block img-thumbnail shadow" alt="КиноКресло - смотреть фильмы онлайн">
                <input type="hidden" value="@Model.ImagePath" asp-for="ImagePath">
            </div>
            <div class="col-8">

                <div class="form-group">
                    <div class="input-group">
                        <input type="hidden" value="@Model.Id" asp-for="Id">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <input class="form-control" value="@Model.Name" placeholder="@Model.Name" asp-for="Name" />
                        <span asp-validation-for="Name" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <input class="form-control" value="@Model.Cost" placeholder="@Model.Cost" asp-for="Cost" />
                        <span asp-validation-for="Cost" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <input class="form-control" value="@Model.Duration" placeholder="@Model.Duration" asp-for="Duration" />
                        <span asp-validation-for="Duration" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <input class="form-control" value="@Model.Description" placeholder="@Model.Description" asp-for="Description" />
                        <span asp-validation-for="Description" />
                    </div>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Сохранить" class="btn btn-outline-dark" />
                </div>
                <a class="btn btn-outline-dark" asp-area="Admin" asp-controller="Products" asp-action="Index"><i class="bi bi-arrow-return-left"></i></a>
            </div>
        </div>
    </div>
</form>