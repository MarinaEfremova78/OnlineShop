@model AdminProductInfo

<div class="row justify-content-center">
    <h3>Создать новый продукт</h3>
</div>
<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post">
            <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Title">Название</label>
                <div class="input-group">
                    <input type="text" class="form-control box-shadow" asp-for="Title" />
                    <span asp-validation-for="Title" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Cost">Стоимость</label>
                <div class="input-group">
                    <input type="number" class="form-control box-shadow" asp-for="Cost" aria-describedby="Cost" />
                    <span class="input-group-text" id="Cost">рублей</span>
                    <span asp-validation-for="Cost" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Duration">Длительность</label>
                <div class="input-group">
                    <input type="number" class="form-control box-shadow" asp-for="Duration" aria-describedby="Duration" />
                    <span class="input-group-text" id="Duration"> минут</span>
                    <span asp-validation-for="Duration" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description">Описание</label>
                <div class="input-group">
                    <input class="form-control box-shadow" asp-for="Description" />
                    <span asp-validation-for="Description" />
                </div>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Сохранить" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <a asp-area="Admin" asp-controller="Products" asp-action="Index">Назад к списку товаров</a>
</div>
