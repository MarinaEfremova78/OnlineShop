@model List<Order>

<div class="container-fluid">
    <div class="row">
        @await Html.PartialAsync("AdminLeftMenu")
        <div class="col-9">
            <div class="col-12 text-center">
                <h3>Список заказов</h3>
            </div>
            @if (Model != null && Model.Count != 0)
            {
                <div class="row d-flex">
                    <table class="table">
                        <thead class="thead-light">
                            <tr class="text-center">
                                <th>№</th>
                                <th>Сумма</th>
                                <th>Статус</th>
                                <th>Пользователь(логин)</th>
                                <th>Дата</th>
                                <th>Время</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr class="text-center">
                                    <td><a asp-area="Admin" asp-controller="Orders" asp-action="Details" asp-route-orderId="@order.Id"><i class="bi bi-search"></i></a> @order.OrderNumber</td>
                                    <td>@order.Cart.TotalSum ₽</td>
                                    <td>@EnumHelper.GetDisplayName(order.Status)</td>
                                    <td>@order.CustomerId</td>
                                    <td>@order.Date</td>
                                    <td>@order.Time</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>


