@model UserSignInInfo


<div class="row justify-content-center text-center">
    <form method="post">
        <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
        <h4 class="text-center">Вход</h4>
        <div>
            <label asp-for="EmailAddress">E-mail</label><br />
            <div class="input-group">
                <input type="email" asp-for="EmailAddress" class="form-control box-shadow" />
                <span asp-validation-for="EmailAddress" />
            </div>
        </div>
        <div>
            <label asp-for="Password">Пароль</label><br />
            <div class="input-group">
                <input type="password" asp-for="Password" class="form-control box-shadow" />
                <span asp-validation-for="Password" />
            </div>
        </div>
        <div class="form-check text-center mb-3">
            <input asp-for="@Model.IsSaved" class="form-check-input" type="checkbox" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Запомнить меня?
            </label>
        </div>
        <div class="form-group text-center">
            <input type="submit" value="Войти" class="btn btn-outline-dark" />
        </div>
        <div class="text-center">
            <a asp-area="" asp-controller="Account" asp-action="Register">Регистрация нового пользователя</a>
        </div>
    </form>
</div>
