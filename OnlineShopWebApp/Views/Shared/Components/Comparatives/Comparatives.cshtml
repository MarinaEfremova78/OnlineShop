@model Product

@if (ViewBag.Comparative == null)
{
    <a class="btn btn-outline-dark" data-toggle="tooltip" data-placement="top" title="Сравнить" asp-area="" asp-controller="Comparison" asp-action="AddToComparison" asp-route-pageNumber="@ViewBag.PageNumber" asp-route-productId="@Model.Id"><i class="bi bi-bar-chart-line"></i></a>
}
else
{
    <button class="btn btn-outline-dark" data-toggle="tooltip" data-placement="top" title="Добавлено к Сравнению"><i class="bi bi-bar-chart-line-fill"></i></button>
}