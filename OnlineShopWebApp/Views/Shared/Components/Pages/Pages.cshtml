@model int

@{
    int previousPage = Model - 1;
    int nextPage = Model + 1;
}
@if (Model == 1 || Model == 0)
{
    <li class="page-item active">
        <a class="page-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-pageNumber="1">1<span class="sr-only"></span></a>
    </li>
    <li class="page-item"><a class="page-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-pageNumber="2">2</a></li>
    <li class="page-item"><a class="page-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-pageNumber="3">3</a></li>
    <li class="page-item">
        <a class="page-link" aria-label="Next" data-toggle="tooltip" data-placement="top" title="Следующая страница" asp-area="" asp-controller="Home" asp-action="Index" asp-route-pageNumber="2">
<span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>
}
else if (Model == 2)
{
    <li class="page-item">
        <a class="page-link" aria-label="Previous" data-toggle="tooltip" data-placement="top" title="Предыдущая страница" asp-area="" asp-controller="Home" asp-action="Index" asp-route-pageNumber="@previousPage">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>
    <li class="page-item"><a class="page-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-pageNumber="1">1</a></li>
    <li class="page-item active">
        <a class="page-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-pageNumber="2">2<span class="sr-only"></span></a>
    </li>
    <li class="page-item"><a class="page-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-pageNumber="3">3</a></li>
    <li class="page-item">
        <a class="page-link" aria-label="Next" data-toggle="tooltip" data-placement="top" title="Следующая страница" asp-area="" asp-controller="Home" asp-action="Index" asp-route-pageNumber="@nextPage">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>
}
else
{
    int firstPage = previousPage - 1;
    <li class="page-item">
        <a class="page-link" aria-label="Previous" data-toggle="tooltip" data-placement="top" title="Предыдущая страница" asp-area="" asp-controller="Home" asp-action="Index" asp-route-pageNumber="@previousPage">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>
    <li class="page-item"><a class="page-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-pageNumber="@firstPage">@firstPage</a></li>
    <li class="page-item"><a class="page-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-pageNumber="@previousPage">@previousPage</a></li>
    <li class="page-item active">
        <a class="page-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-pageNumber="@Model">@Model<span class="sr-only"></span> </a>
    </li>
    @if (ViewBag.LastPage == false)
    {
        <li class="page-item">
            <a class="page-link" aria-label="Next" data-toggle="tooltip" data-placement="top" title="Следующая страница" asp-area="" asp-controller="Home" asp-action="Index" asp-route-pageNumber="@nextPage">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    }
}
