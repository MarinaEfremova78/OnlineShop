<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="max-width: 7%;"><img src="~/images/logo.jpeg" class="img-fluid" /></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li>
                        <div class="btn-group" role="group">
                            <a class="btn btn-outline-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house"></i> Главная</a>
                            <a class="btn btn-outline-dark" asp-area="" role="button" asp-controller="Favourite" asp-action="Index">Избранное <i class="bi bi-bookmarks"></i></a>
                        </div>
                        <a class="btn btn-outline-dark" asp-area="Admin" asp-controller="Orders" asp-action="Index">Панель администратора</a>
                    </li>
                </ul>
            </div>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <div class="btn-group" role="group">
                    @await Component.InvokeAsync("CurrentUser")
                    <a class="btn btn-outline-dark" role="button" asp-area="" asp-controller="Comparison" asp-action="Index"><i class="bi bi-bar-chart-line"></i> Сравнить</a>
                    <a class="btn btn-outline-dark" role="button" asp-area="" asp-controller="Cart" asp-action="Index">Корзина <i class="bi bi-basket">@await Component.InvokeAsync("Cart")</i></a>
                </div>
            </div>
        </div>
    </nav>
</header>
